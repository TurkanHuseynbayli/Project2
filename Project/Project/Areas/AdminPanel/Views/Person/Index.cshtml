@model List<Person>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">Persons</h2>
            <a asp-area="AdminPanel" asp-controller="Person" asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-light">
                    <thead>
                        <tr>

                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Person persons in Model)
                        {
                        <tr>

                            <td>@persons.Name</td>
                            <td>@persons.Surname</td>
                            <td>@persons.Age</td>
                            <td>@persons.Email</td>
                            <td>
                                <a asp-controller="Person" asp-action="Detail" asp-route-id="@persons.Id" class="btn btn-outline-dark">
                                    <i class="mdi mdi-information"></i>
                                </a>
                                <a asp-controller="Person" asp-action="Update" asp-route-id="@persons.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Person" asp-action="Delete" asp-route-id="@persons.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
