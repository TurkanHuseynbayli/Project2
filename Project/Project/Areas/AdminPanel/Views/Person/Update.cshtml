@model Person
@{
    ViewData["Title"] = "Update";
}

<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Surname">Surname</label>
                        <input required asp-for="@Model.Surname" class="form-control" placeholder="Surname">
                        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Competition.Description"> Description</label>
                        <textarea asp-for="@Model.Competition.Description"> </textarea>
                        <span class="text-danger" asp-validation-for="@Model.Competition.Description"></span>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label asp-for="@Model.Name">Name</label>
                        <input required asp-for="@Model.Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label asp-for="@Model.Age">Age</label>
                        <input required asp-for="@Model.Age" class="form-control" placeholder="Age">
                        <span class="text-danger" asp-validation-for="@Model.Age"></span>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label asp-for="@Model.Email">Email</label>
                        <input required asp-for="@Model.Email" class="form-control" placeholder="Email">
                        <span class="text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                </div>

               
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-dark">GO BACK</a>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Competition_Description'))
        .catch(error => {
            console.error(error);
        });
</script>


